<% content_for :title do %>Sign in with Twitter!<% end %>
<div id="user_nav">
  <%= link_to "What is Backgrounder?", about_path, class: "small twitter-button" %>
  <% if current_user %>
  <div id="twitter-login">
    <%= image_tag("backgrounder.png", :alt => "logo", :style => "width: 390px;") %>
      <br /> <br />
    <h3 id="splashpage">Summarize your Twitter feed.</h3><br />
    <%= link_to "Welcome back, #{current_user.name}", backgrounder_path, class: "button radius" %>
  </div>
  
  <% else %>
  <div id="twitter-login">
    <%= image_tag("backgrounder.png", :alt => "logo", :style => "width: 390px;") %>
      <br /> <br />
    <h3 id="splashpage">Summarize your Twitter feed.</h3><br />
    <%= link_to "Sign in with Twitter", "/auth/twitter", class: "large twitter-button radius" %>
  </div>
  <% end %>
</div>    