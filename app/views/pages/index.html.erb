<% content_for :title do %>Sign in with Twitter!<% end %>
<div id="user_nav">
  <% if current_user %>
  <div id="twitter-login"> 
    Welcome, <%= current_user.name %>!
    <%= link_to "Sign Out", signout_path %><br /><br />
    <%= link_to "Retrieve your personal trends", backgrounder_path, class: "button radius" %>
  </div>
  
  <% else %>
    <div id="twitter-login"><%= link_to "Sign in with Twitter", "/auth/twitter", class: "button radius" %></div>
  <% end %>
</div>